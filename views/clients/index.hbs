<h1>Lista de Clientes</h1>
<table class="table">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Nome</th>
      <th scope="col">Endereço</th>
      <th scope="col">Ações</th>
    </tr>
  </thead>
  <tbody>
    {{#each clients}}
    <tr>
      <th scope="row">{{this.id}}</th>
      <td><a href="/clients/{{this.id}}">{{this.nome}}</a></td>
      <td>{{this.endereco}}</td>
      <td><a class="btn btn-primary" href="/clients/{{this.id}}/edit">Atualizar</a>
      <form action="/clients/{{this.id}}?_method=DELETE" method="POST" style="display: inline;">
        <button class="btn btn-danger" type="submit" onclick="return confirm('Tem certeza que deseja apagar o registro?')">Excluir</button>
      </form></td>
    </tr>
    {{/each}}
  </tbody>
</table>
<a class="btn btn-success" href="/clients/create">Novo Cliente</a>